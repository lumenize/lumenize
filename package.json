{
  "name": "@lumenize/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Lumenize monorepo containing all packages",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "website"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
