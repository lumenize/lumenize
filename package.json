{
  "name": "@lumenize/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Lumenize monorepo containing all packages",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "tooling/*",
    "website"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean:dist && npm run clean:deps",
    "clean:dist": "rm -rf packages/*/dist examples/*/dist website/dist lumenize-monolith/dist",
    "clean:deps": "npx lerna clean --yes && rm -rf node_modules",
    "clean:all": "npm run clean && npm install"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "lerna": "^8.2.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
