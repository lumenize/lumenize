{
  "name": "@lumenize/testing",
  "version": "1.0.0",
  "description": "Testing utilities for Lumenize applications",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage --run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "testing",
    "mcp",
    "lumenize",
    "vitest",
    "mock",
    "cloudflare",
    "websocket"
  ],
  "author": "Larry Maccherone",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.0",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@lumenize/utils": "file:../utils"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.0",
    "@vitest/coverage-istanbul": "3.2.4",
    "typescript": "^5.9.2",
    "vitest": "3.2.4",
    "wrangler": "^4.36.0"
  }
}
