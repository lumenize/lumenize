{
  "name": "@lumenize/testing",
  "version": "1.0.0",
  "description": "Testing utilities for Lumenize applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "!dist/scratch/**/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage --run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "testing",
    "mcp",
    "lumenize",
    "vitest",
    "mock",
    "cloudflare",
    "websocket"
  ],
  "author": "Larry Maccherone",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.71",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@lumenize/utils": "file:../utils"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.71",
    "@cloudflare/workers-types": "^4.20250911.0",
    "@vitest/coverage-istanbul": "3.2.4",
    "typescript": "^5.9.2",
    "vitest": "3.2.4",
    "wrangler": "^4.35.0"
  }
}
