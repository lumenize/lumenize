{
  "name": "@lumenize/structured-clone",
  "version": "0.15.0",
  "description": "Structured clone with full support for Errors, Web API objects (Request/Response/Headers/URL), special numbers, cycles, and aliases",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest --run",
    "test:node": "vitest --run --project node",
    "test:workers": "vitest --run --project workers",
    "test:browser": "vitest --run --project browser",
    "coverage": "vitest --run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.3",
    "@cloudflare/workers-types": "^4.20250110.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "playwright": "^1.48.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  },
  "peerDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "structured-clone",
    "serialization",
    "deserialization",
    "polyfill",
    "cloudflare-workers"
  ],
  "author": "Larry Maccherone",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
