{
  "name": "lumenize",
  "author": "Larry Maccherone",
  "description": "You provide the schema. Lumenize provides a full backend on Cloudflare.",
  "keywords": [
    "mcp",
    "mcp-server",
    "mcp-client",
    "server",
    "client",
    "resources",
    "tools",
    "synchronization",
    "json-rpc",
    "json-rpc-2.0",
    "json-rpc-server",
    "json-rpc-client",
    "websocket",
    "websockets",
    "cloudflare",
    "svelte",
    "react",
    "sveltekit",
    "durable-objects"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "version": "2.0.0",
  "license": "BSL-1.1",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npx ttab -t 'Test' npm run dev:test && npx ttab -t 'Main' npm run dev:main",
    "dev:test": "wrangler dev -c ./test/wrangler.jsonc --port 8787",
    "dev:main": "wrangler dev -c ./wrangler.jsonc --port 8788",
    "deploy": "wrangler deploy",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage --exclude '**/live-*.test.ts'",
    "generate-pngs": "npx tsx ./scripts/svg-to-png.ts",
    "generate-types": "wrangler types",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "prepublish": "tsc",
    "generate-schema": "find src/schema -name 'schema.ts' -type f | while read file; do typescript-json-schema --defaultNumberType integer --required --skipLibCheck \"$file\" \"*\" -o \"${file%ts}json\"; done",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "outdated": "npx npm-check-updates",
    "update": "npx npm-check-updates -u -t semver && echo '*** WARNING ***, @cloudflare/vitest-pool-workers only works with vitest@3.1.x and @vitest/coverage-istanbul must match vitest version' && echo 'Check/edit package.json, then run `npm install` to update dependencies.'"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.47",
    "@cloudflare/workers-types": "^4.20250620.0",
    "@resvg/resvg-js": "^2.6.2",
    "@types/node": "^24.0.3",
    "@vitest/coverage-istanbul": "~3.2.3",
    "postal-mime": "^2.4.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-json-schema": "^0.65.1",
    "vitest": "~3.2.3",
    "wrangler": "^4.20.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.832.0",
    "@aws-sdk/client-ses": "^3.830.0",
    "@cfworker/json-schema": "^4.1.1",
    "@transformation-dev/debug": "^1.0.0",
    "observable-polyfill": "^0.0.11",
    "partyserver": "^0.0.72",
    "partysocket": "^1.1.5"
  }
}
